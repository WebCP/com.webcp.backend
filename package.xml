<?xml version="1.0"?>
<!DOCTYPE package SYSTEM "DTD/package.dtd">
<package name="com.burningpedia.backendhandler">

	<packageInformation>
		<packageName>Web ControlPanel Backendhandler</packageName>
		<packageDescription>Behandelt alle Aktionen die mit Rootrechten auf dem Webserver ausgeführt werden müssen</packageDescription>
		<version>1.0.1</version>
		<date>2011-03-16</date>
		<plugin>com.burningpedia.cp</plugin>
	</packageInformation>

	<authorInformation>
		<author>Tobias Friebel</author>
		<authorURL>http://dev.hugin-hosting.de/</authorURL>
		<license>GPL</license>
	</authorInformation>

	<requiredpackages>
		<requiredpackage minversion="1.1.0">com.woltlab.wcf</requiredpackage>
		<requiredpackage>com.burningpedia.cp</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<languages languagecode="de">de.xml</languages>
		<options>options.xml</options>
		<files>files.tar</files>
		<acptemplates>acptemplates.tar</acptemplates>
		<acpmenu>acpmenu.xml</acpmenu>
		<sql>install.sql</sql>
		<eventlistener>eventlistener.xml</eventlistener>
		<useroptions>useroptions.xml</useroptions>
	 	<packageinstallationplugins>pip.tar</packageinstallationplugins>
		<jobhandlertask>jobhandlertasks.xml</jobhandlertask>
		<groupoptions>groupoptions.xml</groupoptions>
		<cronjobs>cronjobs.xml</cronjobs>
	</instructions>
	
	<instructions type="update" fromversion="1.*">
		<languages languagecode="de">de.xml</languages>
		<options>options.xml</options>
		<files>files.tar</files>
		<acptemplates>acptemplates.tar</acptemplates>
		<acpmenu>acpmenu.xml</acpmenu>
		<eventlistener>eventlistener.xml</eventlistener>
		<useroptions>useroptions.xml</useroptions>
	 	<packageinstallationplugins>pip.tar</packageinstallationplugins>
		<groupoptions>groupoptions.xml</groupoptions>
	</instructions>
</package>
